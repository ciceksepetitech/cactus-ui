{
  "name": "root",
  "private": true,
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "commit": "npx git-cz",
    "prepare": "husky",
    "lerna:link": "lerna bootstrap",
    "lerna:changed": "lerna changed",
    "lerna:build": "lerna run build",
    "test:coverage": "jest --coverage",
    "storybook:build": "storybook build",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "test:watch": "jest --watch --watchAll",
    "up": "yarn upgrade-interactive --latest",
    "format": "prettier \"./**/*.{ts,tsx,js,json,md}\"",
    "lerna:publish": "lerna publish --no-git-tag-version",
    "storybook:start": "storybook dev -p 6006",
    "lerna:version": "lerna version --conventional-commits --no-push --exact",
    "test:coverage:summary": "jest --coverage --coverageReporters='text-summary'"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintIgnore": [
    "node_modules",
    "packages/*/**/dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@babel/preset-env": "7.28.5",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/react": "^10.0.8",
    "@storybook/react-webpack5": "^10.0.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/dom": "^10.4.0",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "babel-loader": "^10.0.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-storybook": "^10.0.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-axe": "^10.0.0",
    "lerna": "^9.0.1",
    "mkdirp": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "storybook": "^10.0.8",
    "ts-jest": "^29.4.5",
    "ts-loader": "9.5.4",
    "typescript": "^5.9.3",
    "webpack": "5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
